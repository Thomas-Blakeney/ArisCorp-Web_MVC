@model ArisCorpWeb.ViewModels.HomepageViewModel
@foreach (var db in Model.gameplays)
{
    <div class="gameplay-img">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="@Html.Raw("#collapse" + db.Gameplay)" aria-expanded="false" aria-controls="@Html.Raw("collapse" + db.Gameplay)">
            <img src="/assets/img/gameplays/icons/@Html.Raw(db.Gameplay + ".webp")" alt="Gameplay @db.Gameplay" class="btn-img img-gameplays">
        </button>
    </div>
}
<div class="img-gameplays-line">
    <hr class="animation-element extend in-view">
</div>

@foreach (var db in Model.gameplays)
{
    <div type="button" data-toggle="collapse" data-target="@Html.Raw("#collapse" + db.Gameplay)" aria-expanded="false" aria-controls="@Html.Raw("collapse" + db.Gameplay)">
        <div id="@Html.Raw("collapse" + db.Gameplay)" class="collapse" aria-labelledby="@Html.Raw("heading" + db.Gameplay)" data-parent="#accordionGameplays">
            <img src="/assets/img/gameplays/img/@Html.Raw(db.Gameplay + "1.webp")" alt="Gameplay: @db.Gameplay Screenshot-1" class="gameplay-pic" style="float: left;" />
            <img src="/assets/img/gameplays/img/@Html.Raw(db.Gameplay + "2.webp")" alt="Gameplay: @db.Gameplay Screenshot-2" class="gameplay-pic" style="float: right;" />
            <div class="card-body">
                @Html.Raw(db.Description)
                <br /><span class="font-60">*clicken zum schließen</span>
            </div>
        </div>
    </div>
}

<style>
    .gameplay-pic {
        width: 49%;
    }

    .card-body {
        float: right;
    }

    .font-60 {
        font-size: 60%;
    }

    #accordionGameplays {
        cursor: pointer;
    }

    .gameplay-img {
        display: inline-block;
    }

    .img-gameplays {
        width: 140px;
    }
</style>
