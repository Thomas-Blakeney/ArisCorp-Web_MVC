@model IEnumerable<MemberAPI>

@{
    ViewData["BackC"] = "Home";
    ViewData["BackA"] = "Index";
    ViewData["BackF"] = "tabs";
}

@foreach (var api in Model)
{
    string title = api.member_titel;
    ViewData["Title"] = "Biografie: " + api.member_titel;

    <div class="large-margin"></div>
    <div id="bio" class='large-margin'>
        <div class="row heading tiny-margin">
            <div class="col-md-auto">
                <h1 class="animation-element slide-down">BIOGRAFIE: <span class="coloredaris"> @Html.DisplayFor(model => api.member_titel)</span></h1>
            </div>
            <div class="col">
                <hr class="animation-element extend">
            </div>
        </div>
        <div class="row medium-margin">
            <div class="col-md-11">
                <h2 class="short-hr-left">Bio von  @Html.DisplayFor(model => api.member_titel)</h2>
                <img src="//cms.ariscorp.de/assets/@Html.DisplayFor(model => api.member_potrait)" class="img-fluid b-lazy" alt="Potrait von @Html.DisplayFor(model => api.member_titel)" style="float: right;">
                
                <div id="steckbrief">
                    @api.member_steckbrief
                </div>

                <br />
                <br />
                
                <div id="biografie">
                    @api.member_biografie
                </div>
            </div>
        </div>
    </div>
}