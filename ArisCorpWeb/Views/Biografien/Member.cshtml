@model ArisCorpWeb.Models.Biografien

@{
    ViewData["Title"] = "Biografie: " + Model.Mitglied;
    Layout = "_HomeLayout";
    ViewData["BackC"] = "Home";
    ViewData["BackA"] = "Index";
    ViewData["BackF"] = "tabs";
}
<div class="large-margin"></div>
<div id="bio" class='large-margin'>
    <div class="row heading tiny-margin">
        <div class="col-md-auto">
            <h1 class="animation-element slide-down">BIOGRAFIE: <span class="coloredaris">@Html.DisplayFor(model => model.Mitglied)</span></h1>
        </div>
        <div class="col">
            <hr class="animation-element extend">
        </div>
    </div>
    <div class="row medium-margin tab-manifesto">
        <div class="col-md-11">
            <h2 class="short-hr-left">Bio von @Html.DisplayFor(model => model.Titel)</h2>
            <img src="@Html.DisplayFor(model => model.Potrait)" alt="Potrait von @Html.DisplayFor(model => model.Mitglied)" style="float: right;" />

            <div style="font-size: 75%;">
                <span>@Html.DisplayFor(model => model.Steckbrief)</span>
            </div>
            <div>
                <span>@Html.DisplayFor(model => model.Bio)</span>

                <span>@Html.DisplayFor(model => model.Zusatz)</span>
            </div>
        </div>
    </div>
</div>